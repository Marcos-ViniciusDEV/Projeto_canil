
{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{ backgroud }}')">{{ title }}</section>
<h2>{{ title }} disponíveis para adoção</h2>
{{/banner}}
  
<div class="container list">
{{#myList}}
  <div class="item">
    <img src="images/{{ image }}" class="item--image" />
    <div class="item--name">{{ name }}</div>
    <div class="item--color">Cor:{{ color}}</div>
    <div class="item--genre">Gênero: {{ sex }}</div>
  </div>
  {{/myList}}
</div>

{{^myList}}
<div class="conteiner no-list">
  <h2>Não há animais nestas condições</h2>
</div>
{{/myList}}


{{>partials/footer}}